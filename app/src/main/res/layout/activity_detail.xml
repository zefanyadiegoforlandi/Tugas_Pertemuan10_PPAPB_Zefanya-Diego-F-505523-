<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".DetailActivity">

<ImageView
    android:id="@+id/img_mahasiswa_img"
    android:layout_width="122dp"
    android:layout_height="156dp"
    android:padding="8dp"
    android:src="@drawable/tom" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="19dp"
    android:layout_toEndOf="@id/img_mahasiswa_img"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/namaMahasiswaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Nama: Tom" />

    <TextView
        android:id="@+id/ipkMahasiswaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="IPK: 3.8" />

    <TextView
        android:id="@+id/tanggalLahirTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Tanggal Lahir: 1995-05-20" />

    <TextView
        android:id="@+id/nomorMahasiswaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Nomor Mahasiswa: M1" />

    <TextView
        android:id="@+id/aboutMeMahasiswaTextView"
        android:layout_width="221dp"
        android:layout_height="132dp"
        android:fontFamily="@font/poppins_bold"
        android:text="About Me: lorememmeem" />
    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onBackButtonClick"
        android:text="Back" />
</LinearLayout>




</RelativeLayout>

